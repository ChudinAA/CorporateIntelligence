modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Run Application"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Start Flask App"
author = 41078776
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -u main.py"

[[workflows.workflow]]
name = "Run Application"
author = 41078776
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python migrations.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --worker-class eventlet -w 1 --bind 0.0.0.0:5000 --reload main:app"

[[ports]]
localPort = 5000
externalPort = 80
